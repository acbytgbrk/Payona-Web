<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Payona</title>
    
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    
    <link rel="stylesheet" href="~/css/main.css" />
    <style>
        /* === TEMA DEĞİŞKENLERİ (CSS Variables) === */
        :root {
            /* --- AYDINLIK TEMA --- */
            --brand-primary: #FF6B6B;
            --brand-dark: #EE5253;
            --brand-secondary: #4ECDC4;
            
            --bg-body: #f7f9fc;
            --bg-card: #ffffff;
            --bg-input: #fdfdfd;
            
            --text-main: #2D3436;
            --text-secondary: #636E72;
            --text-placeholder: #a4b0be;
            
            --border-color: #dfe6e9;
            --shadow-color: rgba(0, 0, 0, 0.1);
            
            --nav-bg: rgba(255, 255, 255, 0.85);
            --nav-text: #2D3436;
        }
        /* --- KARANLIK TEMA --- */
        body.dark-theme {
            --brand-primary: #FF8787;
            --brand-dark: #ff6b6b;
            --brand-secondary: #4cd1c5;
            
            --bg-body: #1a1a2e;
            --bg-card: #16213e;
            --bg-input: #0f3460;
            
            --text-main: #ecf0f1;
            --text-secondary: #bdc3c7;
            --text-placeholder: #68798c;
            
            --border-color: #2c3e50;
            --shadow-color: rgba(0, 0, 0, 0.5);
            
            --nav-bg: rgba(22, 33, 62, 0.9);
            --nav-text: #ecf0f1;
        }
        /* YUMUŞAK GEÇİŞ EFEKTLERİ */
        body, .navbar, .card, .auth-card, .form-control, button, a, i, span {
            transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
        }
        /* GENEL AYARLAR */
        * {
            box-sizing: border-box;
            font-family: 'Poppins', sans-serif;
            margin: 0;
            padding: 0;
        }
        body {
            background-color: var(--bg-body);
            display: flex;
            flex-direction: column;
            min-height: 100vh;
        }
        /* NAVBAR TASARIMI */
        .navbar {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 70px;
            background-color: var(--nav-bg);
            backdrop-filter: blur(10px);
            -webkit-backdrop-filter: blur(10px);
            box-shadow: 0 4px 6px -1px var(--shadow-color);
            z-index: 1000;
            display: flex;
            align-items: center;
            justify-content: center;
            border-bottom: 1px solid var(--border-color);
        }
        .navbar-content {
            width: 90%;
            max-width: 1200px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .navbar-brand {
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--brand-primary);
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 10px;
        }
        .navbar-links {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }
        .nav-link {
            text-decoration: none;
            color: var(--nav-text);
            font-weight: 500;
            font-size: 0.95rem;
            position: relative;
        }
        .nav-link:hover { color: var(--brand-primary); }

        /* Kayıt Ol Butonu Stili (Yeni Eklendi) */
        .btn-nav-register {
            padding: 0.5rem 1.2rem;
            background: var(--brand-primary);
            color: #ffffff !important;
            border-radius: 8px;
            font-weight: 600;
            text-decoration: none;
            transition: all 0.3s;
            box-shadow: 0 4px 10px var(--shadow-color);
            border: none;
        }
        .btn-nav-register:hover {
            background: var(--brand-dark);
            transform: translateY(-2px);
            box-shadow: 0 6px 15px var(--shadow-color);
        }

        /* TEMA BUTONU */
        .theme-toggle {
            background: transparent;
            border: 2px solid var(--border-color);
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            color: var(--nav-text);
            font-size: 1.2rem;
            transition: all 0.3s;
        }
        .theme-toggle:hover {
            border-color: var(--brand-primary);
            color: var(--brand-primary);
            transform: rotate(20deg);
        }
        .btn-logout {
            background: var(--brand-primary);
            color: #fff;
            padding: 0.5rem 1.2rem;
            border-radius: 8px;
            border: none;
            font-weight: 600;
            cursor: pointer;
        }
        
        .unread-badge-nav {
            display: inline-block;
            background: var(--brand-primary);
            color: white;
            padding: 2px 6px;
            border-radius: 10px;
            font-size: 0.7rem;
            font-weight: bold;
            min-width: 18px;
            text-align: center;
            line-height: 1.2;
            margin-left: 5px;
        }
        .main-content {
            flex: 1;
            padding-top: 70px;
            width: 100%;
        }
        footer {
            background: var(--bg-card);
            border-top: 1px solid var(--border-color);
            color: var(--text-secondary);
            text-align: center;
            padding: 2rem;
            margin-top: auto;
        }
        
        @@media (max-width: 768px) {
            .navbar-links { gap: 0.8rem; }
            .nav-link { font-size: 0.85rem; }
            .btn-nav-register { padding: 0.4rem 0.8rem; font-size: 0.85rem; }
        }
    </style>
</head>
<body>
    
    <!-- NAVBAR -->
    <nav class="navbar">
        <div class="navbar-content">
            <a href="/" class="navbar-brand">
                <i class="fas fa-utensils"></i> Payona
            </a>
            <div class="navbar-links" id="navbarLinks">
                <!-- Javascript ile doldurulacak -->
            </div>
        </div>
    </nav>
    <!-- İÇERİK -->
    <main class="main-content">
        @RenderBody()
    </main>
    <!-- FOOTER -->
    <footer>
        <p>&copy; 2025 Payona - Öğrenci Yemek Paylaşım Platformu</p>
    </footer>
    <!-- TEMA SCRIPTI -->
    <script>
        (function initTheme() {
            const savedTheme = localStorage.getItem('payona_theme');
            if (savedTheme === 'dark') {
                document.body.classList.add('dark-theme');
            }
        })();
        
        function toggleTheme() {
            document.body.classList.toggle('dark-theme');
            const isDark = document.body.classList.contains('dark-theme');
            localStorage.setItem('payona_theme', isDark ? 'dark' : 'light');
            updateThemeIcon(isDark);
        }
        
        function updateThemeIcon(isDark) {
            const btn = document.getElementById('themeToggle');
            if(btn) {
                btn.innerHTML = isDark 
                    ? '<i class="fas fa-sun"></i>' 
                    : '<i class="fas fa-moon"></i>';
            }
        }
    </script>
    <!-- AUTH VE NAVİGASYON SCRIPTI -->
    <script type="module">
        import { authService } from '/js/modules/auth.js';
        
        const navbarLinks = document.getElementById('navbarLinks');
        const user = authService.getCurrentUser();
        const isAuthenticated = authService.isAuthenticated();

        if (isAuthenticated && user) {
            // == GİRİŞ YAPMIŞ KULLANICI ==
            navbarLinks.innerHTML = `
                <a href="/Dashboard" class="nav-link">Ana Sayfa</a>
                <a href="/Messages" class="nav-link" id="messagesLink">
                    <i class="far fa-comments"></i> Mesajlar
                    <span id="unreadBadge" class="unread-badge-nav" style="display:none; margin-left:5px; background:var(--brand-primary); color:white; padding:2px 6px; border-radius:10px; font-size:0.7rem; font-weight:bold;">0</span>
                </a>
                <a href="/Profile" class="nav-link">Profil</a>
                
                <button class="theme-toggle" id="themeToggle" title="Modu Değiştir" style="margin-left:5px;">
                    <i class="fas fa-moon"></i>
                </button>
                
                <button class="btn-logout" id="logoutBtn">Çıkış</button>
            `;
            
            // Unread count'u yükle ve güncelle
            async function updateUnreadCount() {
                try {
                    const { chatService } = await import('/js/modules/chat.js');
                    const count = await chatService.getUnreadCount();
                    const badge = document.getElementById('unreadBadge');
                    if (badge) {
                        if (count > 0) {
                            badge.textContent = count > 99 ? '99+' : count;
                            badge.style.display = 'inline-block';
                        } else {
                            badge.style.display = 'none';
                        }
                    }
                } catch (error) {
                    console.error('Error updating unread count:', error);
                }
            }
            
            // İlk yükleme
            updateUnreadCount();
            
            // Her 10 saniyede bir güncelle
            setInterval(updateUnreadCount, 10000);
            
            document.getElementById('logoutBtn').addEventListener('click', async () => {
                await authService.logout();
                window.location.href = '/';
            });
        } else {
            // == MİSAFİR KULLANICI (Giriş Yapmamış) ==
            // Burada Kayıt Ol butonu artık ?mode=register parametresiyle yönlendiriyor
            navbarLinks.innerHTML = `
                <a href="/" class="nav-link">Giriş</a>
                
                <a href="/?mode=register" class="btn-nav-register">Kayıt Ol</a>
                
                <button class="theme-toggle" id="themeToggle" title="Modu Değiştir" style="margin-left: 10px;">
                    <i class="fas fa-moon"></i>
                </button>
            `;
        }

        setTimeout(() => {
            const themeBtn = document.getElementById('themeToggle');
            if (themeBtn) {
                themeBtn.addEventListener('click', toggleTheme);
                const isDark = document.body.classList.contains('dark-theme');
                updateThemeIcon(isDark);
            }
        }, 100);
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>